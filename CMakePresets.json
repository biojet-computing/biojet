    { "name": "clang-debug", "configurePreset": "clang-debug", "output": { "verbosity": "extra" } },
    { "name": "clang-profile", "configurePreset": "clang-profile", "output": { "verbosity": "extra" } },
    { "name": "clang-release", "configurePreset": "clang-release", "output": { "verbosity": "extra" } },
    { "name": "clang-asan", "configurePreset": "clang-asan", "output": { "verbosity": "extra" } },
    { "name": "clang-tsan", "configurePreset": "clang-tsan", "output": { "verbosity": "extra" } },
    { "name": "clang-ubsan", "configurePreset": "clang-ubsan", "output": { "verbosity": "extra" } }
  ],
  "packagePresets": [
