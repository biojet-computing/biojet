{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true
    },

    { "name": "gcc", "toolchainFile": "${sourceDir}/cmake/Toolchains/toolchain-gcc.cmake", "hidden": true },
    { "name": "clang", "toolchainFile": "${sourceDir}/cmake/Toolchains/toolchain-clang.cmake", "hidden": true },

    { "name": "debug","cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }, "hidden": true },
    { "name": "profile", "cacheVariables": { "CMAKE_BUILD_TYPE": "Profile" }, "hidden": true },
    { "name": "release", "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }, "hidden": true },
    { "name": "asan", "cacheVariables": { "CMAKE_BUILD_TYPE": "Asan" }, "hidden": true },
    { "name": "tsan", "cacheVariables": { "CMAKE_BUILD_TYPE": "Tsan" }, "hidden": true },
    { "name": "ubsan", "cacheVariables": { "CMAKE_BUILD_TYPE": "Ubsan" }, "hidden": true },

    { "name": "gcc-debug", "inherits": [ "base", "gcc", "debug" ] },
    { "name": "gcc-profile", "inherits": [ "base", "gcc", "profile" ] },
    { "name": "gcc-release", "inherits": [ "base", "gcc", "release" ] },
    { "name": "gcc-asan", "inherits": [ "base", "gcc", "asan" ] },
    { "name": "gcc-tsan", "inherits": [ "base", "gcc", "tsan" ] },
    { "name": "gcc-ubsan", "inherits": [ "base", "gcc", "ubsan" ] },

    { "name": "clang-debug", "inherits": [ "base", "clang", "debug" ] },
    { "name": "clang-profile", "inherits": [ "base", "clang", "profile" ] },
    { "name": "clang-release", "inherits": [ "base", "clang", "release" ] },
    { "name": "clang-asan", "inherits": [ "base", "clang", "asan" ] },
    { "name": "clang-tsan", "inherits": [ "base", "clang", "tsan" ] },
    { "name": "clang-ubsan", "inherits": [ "base", "clang", "ubsan" ] }
  ],
  "buildPresets": [
    { "name": "gcc-debug", "configurePreset": "gcc-debug" },
    { "name": "gcc-profile", "configurePreset": "gcc-profile" },
    { "name": "gcc-release", "configurePreset": "gcc-release" },
    { "name": "gcc-asan", "configurePreset": "gcc-asan" },
    { "name": "gcc-tsan", "configurePreset": "gcc-tsan" },
    { "name": "gcc-ubsan", "configurePreset": "gcc-ubsan" },

    { "name": "clang-debug", "configurePreset": "clang-debug" },
    { "name": "clang-profile", "configurePreset": "clang-profile" },
    { "name": "clang-release", "configurePreset": "clang-release" },
    { "name": "clang-asan", "configurePreset": "clang-asan" },
    { "name": "clang-tsan", "configurePreset": "clang-tsan" },
    { "name": "clang-ubsan", "configurePreset": "clang-ubsan" }
  ],
  "testPresets": [
    { "name": "gcc-debug", "configurePreset": "gcc-debug", "output": { "verbosity": "extra" } },
    { "name": "gcc-profile", "configurePreset": "gcc-profile", "output": { "verbosity": "extra" } },
    { "name": "gcc-release", "configurePreset": "gcc-release", "output": { "verbosity": "extra" } },
    { "name": "gcc-asan", "configurePreset": "gcc-asan", "output": { "verbosity": "extra" } },
